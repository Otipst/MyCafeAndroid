<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_fragment">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/background"
        android:layout_below="@id/bannerhomeuser"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/banner1"
        android:id="@+id/bannerhomeuser"
        android:layout_above="@id/admin"
        android:layout_below="@id/textlogin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="LOGIN ADMIN"
        android:textStyle="bold"
        android:textColor="#FF9900"
        android:textSize="20dp"
        android:id="@+id/textlogin"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/admin"
        android:src="@drawable/ic_baseline_admin_panel_settings_24_orange"
        android:layout_centerInParent="true"
        />

    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/container2"
        android:layout_centerInParent="true"
        android:layout_below="@id/admin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </FrameLayout>
    <ImageView
        android:layout_width="1080px"
        android:layout_height="500px"
        android:src="@drawable/orangewaves1"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>